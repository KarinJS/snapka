{
  "name": "@snapka/puppeteer",
  "version": "0.1.0",
  "description": "Enhanced Puppeteer with browser finder and parallel screenshot capabilities",
  "keywords": [
    "puppeteer",
    "browser",
    "automation",
    "testing",
    "screenshot",
    "parallel",
    "chromium",
    "chrome",
    "headless"
  ],
  "homepage": "https://github.com/karinjs/snapka#readme",
  "bugs": {
    "url": "https://github.com/karinjs/snapka/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/karinjs/snapka.git",
    "directory": "packages/puppeteer"
  },
  "license": "MIT",
  "author": "shijin",
  "type": "module",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./puppeteer-core": {
      "types": "./src/puppeteer-core.ts",
      "default": "./src/puppeteer-core.ts"
    },
    "./snapka-browser-finder": {
      "types": "./src/snapka-browser-finder.ts",
      "default": "./src/snapka-browser-finder.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && tsdown",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@snapka/browser-finder": "workspace:*",
    "@snapka/browsers": "workspace:*",
    "@snapka/puppeteer-core": "workspace:*",
    "@snapka/types": "workspace:*",
    "p-limit": "catalog:"
  },
  "publishConfig": {
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.mjs"
      },
      "./puppeteer-core": {
        "types": "./dist/puppeteer-core.d.ts",
        "default": "./dist/puppeteer-core.mjs"
      },
      "./snapka-browser-finder": {
        "types": "./dist/snapka-browser-finder.d.ts",
        "default": "./dist/snapka-browser-finder.mjs"
      }
    }
  },
  "access": "public"
}