{
  "name": "@snapka/playwright",
  "version": "0.1.0",
  "description": "Enhanced Playwright with browser finder and parallel screenshot capabilities",
  "keywords": [
    "playwright",
    "browser",
    "automation",
    "testing",
    "screenshot",
    "parallel",
    "chromium",
    "firefox",
    "webkit"
  ],
  "homepage": "https://github.com/karinjs/snapka#readme",
  "bugs": {
    "url": "https://github.com/karinjs/snapka/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/karinjs/snapka.git",
    "directory": "packages/playwright"
  },
  "license": "MIT",
  "author": "shijin",
  "type": "module",
  "access": "public",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./playwright-core": {
      "types": "./src/playwright-core.ts",
      "default": "./src/playwright-core.ts"
    },
    "./snapka-browser-finder": {
      "types": "./src/snapka-browser-finder.ts",
      "default": "./src/snapka-browser-finder.ts"
    }
  },
  "scripts": {
    "build": "tsc && tsdown",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@snapka/browser-finder": "workspace:*",
    "@snapka/browsers": "workspace:*",
    "@snapka/playwright-core": "workspace:*",
    "@snapka/types": "workspace:*",
    "p-limit": "catalog:"
  },
  "publishConfig": {
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.mjs"
      },
      "./playwright-core": {
        "types": "./dist/playwright-core.d.ts",
        "default": "./dist/playwright-core.mjs"
      },
      "./snapka-browser-finder": {
        "types": "./dist/snapka-browser-finder.d.ts",
        "default": "./dist/snapka-browser-finder.mjs"
      }
    },
    "files": [
      "dist"
    ]
  }
}